<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilmsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewFragmentFilms"
            android:layout_width="163dp"
            android:layout_height="214dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textViewFragmentFilmsTitle"
            style="@style/textSize32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="Title" />

        <TextView
            android:id="@+id/textViewFragmentFilmsYear"
            style="@style/textSize18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="Год:..." />

        <TextView
            android:id="@+id/textViewFragmentFilmsType"
            style="@style/textSize18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:text="Тип:..." />
        <Button
            android:id="@+id/bottomFragmentFilms"
            android:layout_width="153dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            style="@style/textButtonSize14"
            android:theme="@style/textButtonSize14"
            android:layout_marginTop="32dp"
            android:text="@string/save"
            android:background="@drawable/selector_bottom_color"
            android:elevation="4dp"

            />
    </LinearLayout>

</FrameLayout>